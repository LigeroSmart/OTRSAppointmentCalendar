var EventSources = {
[% RenderBlockStart("CalendarSource") %]
    [% Data.CalendarID | JSON %]: {
        url: Core.Config.Get('CGIHandle'),
        type: 'POST',
        data: {
            Action: 'AgentAppointmentList',
            Subaction: 'ListAppointments',
            CalendarID: [% Data.CalendarID | JSON %],
        },
